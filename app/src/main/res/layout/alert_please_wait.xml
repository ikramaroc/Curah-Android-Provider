<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_220sdp"
    android:layout_margin="@dimen/_30dp"
    android:background="@android:color/transparent"
    app:cardCornerRadius="@dimen/_30sdp"
    app:cardElevation="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_cover_round_corner"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_gravity="center"
                android:paddingTop="@dimen/_25sdp"
                android:src="@mipmap/ic_time_white" />

            <TextView
                android:id="@+id/please_wait_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/aeh_bold"
                android:paddingTop="15dp"
                android:text="@string/please_wait"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_size_e" />

            <TextView
                android:id="@+id/admin_will_approve_your_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aeh_bold"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/admin_will_approve_your"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_size_d" />
        </LinearLayout>

        <ImageView
            android:id="@+id/close"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_marginRight="@dimen/_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:src="@android:drawable/ic_delete"
            android:tint="@color/white" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
